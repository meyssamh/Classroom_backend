{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
        // "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "semi": "off",
        "@typescript-eslint/semi": "error",
        "quotes": "off",
        "@typescript-eslint/quotes": ["error", "single"]
    },
    "root": true
}